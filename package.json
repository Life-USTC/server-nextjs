{
  "name": "life-ustc-server-nextjs",
  "version": "0.1.0",
  "private": true,
  "description": "USTC Life Server - Course and schedule management API using Next.js",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "bun run prisma:generate && bun run openapi:generate",
    "start": "next start",
    "check": "bun run prisma:generate && biome check",
    "format": "biome format",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install chromium",
    "hooks:install": "git config core.hooksPath .githooks",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "openapi:generate": "next-openapi-gen generate && bun run openapi:postprocess",
    "openapi:postprocess": "bun run tools/openapi-postprocess.ts",
    "openapi:types": "bunx openapi-typescript \"public/openapi.generated.json\" -o \"src/generated/openapi.ts\"",
    "dev:seed-debug-user": "bun run tools/seed-dev-scenarios.ts",
    "dev:seed-scenarios": "bun run tools/seed-dev-scenarios.ts",
    "dev:reset-scenarios": "bun run tools/reset-dev-scenarios.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.978.0",
    "@aws-sdk/s3-request-presigner": "^3.978.0",
    "@base-ui/react": "^1.1.0",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@phosphor-icons/react": "^2.1.10",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@types/pg": "^8.16.0",
    "class-variance-authority": "^0.7.1",
    "cli-progress": "^3.12.0",
    "clsx": "^2.1.1",
    "commander": "^14.0.2",
    "dayjs": "^1.11.19",
    "diff": "^5.2.0",
    "dotenv": "^17.2.3",
    "ical-generator": "^10.0.0",
    "jose": "^6.1.3",
    "katex": "^0.16.28",
    "lucide-react": "^0.562.0",
    "next": "^16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.8.0",
    "next-themes": "^0.4.6",
    "openapi-fetch": "^0.17.0",
    "pg": "^8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "rehype-attr": "^4.1.1",
    "rehype-katex": "^7.0.1",
    "rehype-sanitize": "^6.0.0",
    "remark-directive": "^4.0.0",
    "remark-emoji": "^5.0.2",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sass": "^1.97.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "unist-util-visit": "^5.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "1.0.0",
    "baseline-browser-mapping": "^2.9.19",
    "next-openapi-gen": "^0.10.2",
    "openapi-typescript": "^7.13.0",
    "prisma": "^7.3.0",
    "prisma-zod-generator": "^2.1.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
